@model IEnumerable<Navbar>

<header class="header-section clearfix">
    <a href="index.html" class="site-logo">
        <img src="./assets/img/logo.png" alt="">
    </a>
    <div class="header-right">
        <a href="#" class="hr-btn">Help</a>
        <span>|</span>
        <div class="user-panel">
            <a href="" class="login">Login</a>
            <a href="" class="register">Create an account</a>
        </div>
    </div>
    <ul class="main-menu">

        @foreach (var item in Model)
        {

            @if (item.type == 1)
            {
                <li><a href="index.html">@item.menu</a></li>
            }
            else if (item.type == 2)
            {
                var parentList = Model.Where(parent => !Model.Any(a => item.parentId == parent.parentId)).ToList();
                <li>
                    <a href="#">@item.menu</a>
                    <ul class="sub-menu">
                        @foreach (var altItem in parentList)
                        {
                            <li><a href="category.html">@altItem.menu</a></li>
                        }
                    </ul>
                </li>
            }



        }

    </ul>
</header>